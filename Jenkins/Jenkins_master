#!groovy
//properties([disableConcurrentBuilds()])

pipeline {
  agent{
    label 'master'
  }
 options {
    timestamps()
  }
  stages {
    stage('Build app') {
      steps {
        sh '''
            if  [ -d HelloWorld ]; then
            rm -r HelloWorld
            fi
            git clone "https://github.com/Frolov-Viacheslav/HelloWorld.git"
            ansible-playbook HelloWorld/Ansible/playbook.yml
            rm -r HelloWorld
            cd /var/jenkins_home
            scp Hello.jar 172.18.0.100:/home/jenkins
            
           '''
      }
    }
  }
}
