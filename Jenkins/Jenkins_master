#!groovy
//properties([disableConcurrentBuilds()])

pipeline {
  agent{
    label 'master'
  }
 options {
    timestamps()
  }
  stages {
    stage('Build app') {
      steps {
        sh '''
            if  [ -d HelloWorld ]; then
            rm -r HelloWorld
            fi
            git clone "git@github.com:Frolov-Viacheslav/HelloWorld.git" --branch dev
            ansible-playbook HelloWorld/Ansible/playbook.yml
            rm -r HelloWorld
            
           '''
      }
    }
  }
  post { 
        // Выполняет в конце сборки (если сборка не удалась)
        failure { 
            sh '''
            if  [ -d HelloWorld ]; then
            rm -r HelloWorld
            fi
            git clone "git@github.com:Frolov-Viacheslav/HelloWorld.git" --branch dev
            cd HelloWorld
            git reset --hard HEAD~
            git push -f
            cd ..
            rm -r HelloWorld
            '''
          // отправим последние 50 строк неудачной сборки

    emailext (
      subject: "FAILURE: ${env.JOB_NAME} Build # ${env.BUILD_NUMBER} ",
      body: """FAILED: Job ${env.JOB_NAME} [${env.BUILD_NUMBER}]':
      Check console output at ${env.BUILD_URL}console
      """,
      to: 'v.frolov@csn.khai.edu',
      from: 'slava.frolov777@gmail.com'
    )
        }
    }
}
