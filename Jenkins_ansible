#!groovy
// Ждет окончания предыдущей сборки (нельзя несколько одновременно)
properties([disableConcurrentBuilds()]) 
pipeline {
  agent{
    label 'slave01' 
  }
 options {
   // Выводить в логе сборки время каждой операции
   timestamps() 
  }
  stages {
    stage('Build app') {
      steps {
        // shell скрипт
        sh '''
             ansible jenkins -m git -a 'repo="https://github.com/Frolov-Viacheslav/HelloWorld.git" dest=/home/Slava/HelloWorld'
             ansible-playbook /home/jenkins/HelloWorld/playbook.yml
           '''
      }
    }
  }
  post { 
        // Выполняет в конце сборки (всегда)
        always { 
            echo  "Ansible + Jenkins"
        }
    }
}
