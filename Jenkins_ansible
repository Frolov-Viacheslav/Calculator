#!groovy
// Ждет окончания предыдущей сборки (нельзя несколько одновременно)
properties([disableConcurrentBuilds()]) 
pipeline {
 agent none
 options {
   // Выводить в логе сборки время каждой операции
   timestamps() 
  }
  stages {
   stage('Paralel stage') {
    parallel {
    stage('Build app') {
       agent{ label 'master' }
      steps {
        def flag = false
        // shell скрипт
        //sh git clone "https://github.com/Frolov-Viacheslav/HelloWorld.git"
        sh '''
             git clone "https://github.com/Frolov-Viacheslav/HelloWorld.git"
             ansible-playbook HelloWorld/playbook.yml
             rm -r HelloWorld
             flag = true
           '''
      }
    }
       stage('launch slave') {
       agent{ label 'slave01' }
      steps {
          waitUntil {
            flag
        }
      }
       }
   }
  }
  }
  post { 
        // Выполняет в конце сборки (всегда)
        always { 
            echo  "Ansible + Jenkins"
        }
    }
}
